{
    "name": "vscode-ai-chat-extension",
    "displayName": "VS Code AI Chat Extension",
    "description": "A VS Code extension with an AI chat using React in a webview",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:aiChatSidebar"
    ],
    "main": "./extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "ai-chat-sidebar",
                    "title": "AI Chat",
                    "icon": "resources/icon.svg"
                }
            ]
        },
        "views": {
            "ai-chat-sidebar": [
                {
                    "type": "webview",
                    "id": "aiChatSidebar",
                    "name": "AI Chat"
                }
            ]
        }
    },
    "scripts": {
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "test-compile": "tsc -p ./",
        "watch": "webpack --mode development --watch"
    },
    "devDependencies": {
        "@babel/core": "^7.15.0",
        "@babel/preset-env": "^7.15.0",
        "@babel/preset-react": "^7.14.5",
        "@types/vscode": "^1.60.0",
        "babel-loader": "^8.2.2",
        "css-loader": "^6.2.0",
        "style-loader": "^3.2.1",
        "webpack": "^5.50.0",
        "webpack-cli": "^4.8.0"
    },
    "dependencies": {
        "prismjs": "^1.29.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    }
}
